# Convex Configuration
# Get your deployment URL from https://dashboard.convex.dev
NEXT_PUBLIC_CONVEX_URL=https://your-deployment-name.convex.cloud

# Optional: WebSocket URL (defaults to production)
NEXT_PUBLIC_WS_URL=wss://realtime.polymarket.com

# Optional: CLOB API credentials (for authenticated features)
# NEXT_PUBLIC_CLOB_API_KEY=your_api_key
# NEXT_PUBLIC_CLOB_SECRET=your_secret
# NEXT_PUBLIC_CLOB_PASSPHRASE=your_passphrase

# Optional: Convex Sync Settings
# Enable/disable automatic syncing of WebSocket data to Convex
NEXT_PUBLIC_CONVEX_SYNC_ENABLED=true

# Batch settings for trade syncing (milliseconds)
NEXT_PUBLIC_CONVEX_BATCH_DELAY=2000
NEXT_PUBLIC_CONVEX_BATCH_SIZE=10
